<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="drawer_menu_item" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="drawer_menu_title" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
        <item name="android:fontFamily">@font/urbanist_bold</item><!-- White icon color -->
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">25dp</item>
